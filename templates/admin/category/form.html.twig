{% extends 'admin/base.html.twig' %}

{% block admin_title %}{{ category.id ? 'Modifier' : 'Nouvelle' }} catégorie{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h5 fw-normal">{{ category.id ? 'Modifier' : 'Nouvelle' }} catégorie</h1>
    <a href="{{ path('admin_category_index') }}" class="btn btn-minimal btn-sm">Retour</a>
</div>

<div class="card card-minimal">
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_widget(form, { attr: { class: 'form-control border-secondary' } }) }}
        <button type="submit" class="btn btn-minimal-solid btn-sm">{{ category.id ? 'Enregistrer' : 'Créer' }}</button>
        <a href="{{ path('admin_category_index') }}" class="btn btn-minimal btn-sm">Annuler</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
