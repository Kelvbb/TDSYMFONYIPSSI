{% extends 'admin/base.html.twig' %}

{% block admin_title %}Commentaires{% endblock %}

{% block admin_content %}
<h1 class="h5 fw-normal mb-4">Commentaires</h1>

<div class="card card-minimal">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="small text-secondary">
                <tr><th>Id</th><th>Contenu</th><th>Article</th><th>Auteur</th><th>Date</th><th>Statut</th><th></th></tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                <tr>
                    <td class="small text-secondary">{{ comment.id }}</td>
                    <td class="small">{{ comment.content|u.truncate(40) }}</td>
                    <td class="small"><a href="{{ path('blog_show', { id: comment.post.id }) }}" class="text-body">{{ comment.post.title|u.truncate(30) }}</a></td>
                    <td class="small">{{ comment.author.displayName }}</td>
                    <td class="small text-secondary">{{ comment.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        {% if comment.status == 'approved' %}<span class="badge badge-minimal">Approuvé</span>
                        {% elseif comment.status == 'rejected' %}<span class="badge badge-minimal text-secondary">Rejeté</span>
                        {% else %}<span class="badge badge-minimal text-secondary">En attente</span>{% endif %}
                    </td>
                    <td>
                        {% if comment.status != 'approved' %}
                        <form method="post" action="{{ path('admin_comment_approve', { id: comment.id }) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ comment.id) }}">
                            <button type="submit" class="btn btn-minimal btn-sm">Approuver</button>
                        </form>
                        {% endif %}
                        {% if comment.status != 'rejected' %}
                        <form method="post" action="{{ path('admin_comment_reject', { id: comment.id }) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ comment.id) }}">
                            <button type="submit" class="btn btn-minimal btn-sm">Rejeter</button>
                        </form>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr><td colspan="7" class="text-secondary small">Aucun commentaire.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
