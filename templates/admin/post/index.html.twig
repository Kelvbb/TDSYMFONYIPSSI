{% extends 'admin/base.html.twig' %}

{% block admin_title %}Articles{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h5 fw-normal">Articles</h1>
    <a href="{{ path('admin_post_new') }}" class="btn btn-minimal-solid btn-sm">Nouvel article</a>
</div>

<div class="card card-minimal">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="small text-secondary">
                <tr><th>Id</th><th>Titre</th><th>Cat√©gorie</th><th>Date</th><th>Auteur</th><th></th></tr>
            </thead>
            <tbody>
                {% for post in posts %}
                <tr>
                    <td class="small text-secondary">{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td class="small">{{ post.category.name }}</td>
                    <td class="small text-secondary">{{ post.publishedAt|date('d/m/Y') }}</td>
                    <td class="small">{{ post.author.displayName }}</td>
                    <td class="text-end">
                        <a href="{{ path('blog_show', { id: post.id }) }}" class="btn btn-minimal btn-sm">Voir</a>
                        <a href="{{ path('admin_post_edit', { id: post.id }) }}" class="btn btn-minimal btn-sm">Modifier</a>
                        <form method="post" action="{{ path('admin_post_delete', { id: post.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                            <button type="submit" class="btn btn-minimal btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% else %}
                <tr><td colspan="6" class="text-secondary small">Aucun article.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
