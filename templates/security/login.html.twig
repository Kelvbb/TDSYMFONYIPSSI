{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card card-minimal">
            <div class="card-body p-4">
                <h1 class="h5 fw-normal mb-4">Connexion</h1>

                {% if error %}
                <div class="alert alert-minimal alert-danger mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label small text-secondary">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control border-secondary" autocomplete="email" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label small text-secondary">Mot de passe</label>
                        <input type="password" name="_password" id="inputPassword" class="form-control border-secondary" autocomplete="current-password" required>
                    </div>
                    <button class="btn btn-minimal-solid w-100" type="submit">Se connecter</button>
                </form>

                <p class="mt-4 mb-0 text-center text-secondary small">
                    Pas de compte ? <a href="{{ path('app_register') }}" class="text-body">S'inscrire</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
